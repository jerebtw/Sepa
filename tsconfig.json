{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "newLine": "lf",
    "outDir": "lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["**/*.test.ts", "/lib"],
  "include": ["src/**/*.ts"]
}
