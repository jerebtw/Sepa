{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "newLine": "lf",
    "outDir": "lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
  },
  "exclude": [
    "**/*.test.ts",
    "/lib"
  ],
  "include": [
    "src/**/*.ts"
  ],
}