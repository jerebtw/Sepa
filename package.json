{
  "name": "sepa-js-xml",
  "keywords": [
    "sepa",
    "xml"
  ],
  "version": "1.0.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/jerebtw/Sepa-JS-XML.git",
  "author": "Jerebtw <jeremialp41@gmail.com>",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "np": {
    "contents": "/lib",
    "branch": "main"
  },
  "scripts": {
    "watch": "tsc -w",
    "build": "tsc",
    "format:test": "prettier --check \"src/**/*.{ts,tsx}\"",
    "format:write": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format:write && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "xml-js": "^1.6.11"
  }
}