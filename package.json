{
  "name": "sepa-js-xml",
  "keywords": [
    "sepa",
    "xml"
  ],
  "version": "1.1.2",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/jerebtw/Sepa-JS-XML.git",
  "author": "Jerebtw <jeremialp41@gmail.com>",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "np": {
    "contents": "/lib",
    "branch": "main"
  },
  "scripts": {
    "size": "echo index && gzip-size lib/index.js && echo index.min && gzip-size lib/index.min.js",
    "build": "yarn ts && yarn build:esbuild && yarn build:esbuild:minify",
    "build:esbuild": "esbuild src/index.ts --format=cjs --outfile=lib/index.js --legal-comments=none",
    "build:esbuild:minify": "yarn build:esbuild --minify-syntax --minify-whitespace --keep-names --outfile=lib/index.min.js",
    "ts": "tsc --emitDeclarationOnly --declarationDir lib && cd lib && copy index.d.ts index.min.d.ts",
    "docs": "typedoc src/index.ts --name \"Sepa JS XML\"",
    "deploy:docs": "yarn docs && gh-pages -d docs",
    "format:test": "prettier --check \"src/**/*.{ts,tsx}\"",
    "format:write": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint && yarn deploy:docs",
    "preversion": "yarn lint",
    "version": "yarn format:write && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "esbuild": "^0.14.14",
    "eslint": "^8.8.0",
    "gh-pages": "^3.2.3",
    "gzip-size-cli": "^5.1.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "xml-js": "^1.6.11"
  }
}