{
  "name": "sepa-js-xml",
  "keywords": [
    "sepa",
    "xml"
  ],
  "version": "1.2.1",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/jerebtw/Sepa-JS-XML.git",
  "author": "Jerebtw <jeremialp41@gmail.com>",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "size": "echo index && gzip-size lib/index.js && echo index.min && gzip-size lib/index.min.js",
    "build": "yarn ts && yarn minify",
    "minify": "terser lib/index.js -o lib/index.min.js -c --keep-fnames",
    "ts": "tsc && cd lib && copy index.d.ts index.min.d.ts",
    "docs": "typedoc src/index.ts --name \"Sepa JS XML\"",
    "deploy:docs": "yarn docs && gh-pages -d docs",
    "format:test": "prettier --check \"src/**/*.{ts,tsx}\"",
    "format:write": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint src/**/*.ts",
    "test": "jest && yarn format:test && yarn lint",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn deploy:docs",
    "preversion": "yarn test",
    "version": "yarn format:write && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "gh-pages": "^3.2.3",
    "gzip-size-cli": "^5.1.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "terser": "^5.11.0",
    "ts-jest": "^27.1.3",
    "typedoc": "^0.22.12",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "xml-js": "^1.6.11"
  }
}